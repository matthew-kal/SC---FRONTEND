{
  "expo": {
    "name": "SurgiCalm",
    "slug": "surgicalm",
    "scheme": "surgicalm",
    "owner": "matthewkal",
    "version": "1.0.0",
    "description": "SurgiCalm helps patients prepare for and recover from surgery with daily educational content and tasks.",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "usesApplePushNotifications": true,
      "bundleIdentifier": "com.surgicalm.platform",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "SurgiCalm uses Face ID and Touch ID to provide secure and convenient access to your healthcare content. This ensures your medical information stays protected while allowing quick and safe login to your personalized care plan.",
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "100.1.109.244": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.surgicalm.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-audio",
      "expo-video",
      "expo-notifications",
      "expo-local-authentication",
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ]
    ],
    "expo": {
      "eas": {
        "projectId": "4220048f-3533-4e7b-9cd6-041deb0f3eaa"
      }
    }
    }
  }

